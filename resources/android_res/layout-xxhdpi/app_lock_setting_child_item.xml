<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <ImageView
        android:id="@+id/select_setting_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="0dp"
        android:padding="16dp" />

    <TextView
        android:visibility="gone"
        android:textColor="@color/common_item_info"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/select_setting_item"
        android:fontFamily="@string/font_families_roboto"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15seconds"/>

    <TextView
        android:id="@+id/title_setting_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="56dp"
        android:layout_toLeftOf="@id/select_setting_item"
        android:textColor="@color/menu_setting_ok"
        android:fontFamily="@string/font_families_roboto"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/radio_setting_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:src="@drawable/common_select_null" />

    <TextView
        android:visibility="gone"
        android:id="@+id/select_setting_statu"
        android:textColor="@color/common_item_info"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@string/font_families_roboto"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:text="twice"/>

</RelativeLayout>