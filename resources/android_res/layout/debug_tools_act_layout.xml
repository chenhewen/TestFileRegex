<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEEEEE"
    android:orientation="vertical" >

    <!-- 标题 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/common_title_background" >

        <include
            android:id="@+id/debug_tools_title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/common_base_right_title_layout" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:text="Log Panel"
                    android:textColor="@color/menu_setting_ok"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/debug_tools_log_panel_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:button="@drawable/common_switch_selector"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/debug_tools_log_panel_log_tag_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin" >

                <EditText
                    android:id="@+id/debug_tools_log_panel_log_tag_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:hint="input the filter tag"
                    android:textColor="@color/menu_setting_ok"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/debug_tools_log_panel_log_tag_set_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/start_page_btn_selector"
                    android:button="@drawable/common_switch_selector"
                    android:padding="4dp"
                    android:text="update filter  tag"
                    android:textColor="@color/start_page_btn_text_selector" />
            </LinearLayout>

            <TextView
                android:id="@+id/debug_tools_cpu_test_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@drawable/common_dialog_btn_selector"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="CPU Test  Settings"
                android:textColor="@color/menu_setting_ok"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/common_listview_divider" />

            <TextView
                android:id="@+id/debug_tools_ram_sdcard_test_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@drawable/common_dialog_btn_selector"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="Ram SDCard Test  Settings"
                android:textColor="@color/menu_setting_ok"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/common_listview_divider" />

            <TextView
                android:id="@+id/debug_tools_quick_search_test_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@drawable/common_dialog_btn_selector"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="Transit Activities"
                android:textColor="@color/menu_setting_ok"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/common_listview_divider" />

            <TextView
                android:id="@+id/debug_tools_V1_27_abtest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@drawable/common_dialog_btn_selector"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="V1.27完成页优化方案测试"
                android:textColor="@color/menu_setting_ok"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/common_listview_divider" />

            <TextView
                android:id="@+id/notification_pop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@drawable/common_dialog_btn_selector"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text="pop notification"
                android:textColor="@color/menu_setting_ok"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/common_listview_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:layout_height="@dimen/common_title_height"
                android:background="@drawable/common_dialog_btn_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/debug_tools_buy_user_identify_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:paddingRight="@dimen/common_margin"
                    android:text=""
                    android:textColor="@color/menu_setting_ok"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/debug_tools_buy_user_identify_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:button="@drawable/common_switch_selector" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/common_listview_divider" />

            <TextView
                android:id="@+id/debug_tools_abtest_user_identify_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@drawable/common_dialog_btn_selector"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:text=""
                android:textColor="@color/menu_setting_ok"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/common_listview_divider" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>