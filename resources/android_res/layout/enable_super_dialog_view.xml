<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.function.boost.enablesuper.EnableSuperDialogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/back_white"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <com.gto.zero.zboost.anim.AnimView
            android:id="@+id/fragment_enable_super_boost_new_anim_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/fragment_enable_super_boost_new_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_enable_super_boost_new_anim_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textColor="#404040"
            android:textSize="16dp"

            />

        <RelativeLayout
            android:id="@+id/fragment_enable_super_boost_new_mode_check_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/fragment_enable_super_boost_new_mode_check_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@drawable/start_page_checkbox_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"

                />

            <TextView
                android:id="@+id/fragment_enable_super_boost_new_mode_check_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@id/fragment_enable_super_boost_new_mode_check_checkbox"
                android:textColor="#9a9a9a"
                android:textSize="14dp"
                />

        </RelativeLayout>

        <View
            android:id="@+id/fragment_enable_super_boost_new_mode_devider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_divider_height_level1"
            android:layout_above="@+id/fragment_enable_super_boost_new_mode_check_layout"
            android:background="@color/enable_super_devider"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fragment_enable_super_boost_new_mode_devider"
            android:layout_below="@id/fragment_enable_super_boost_new_mode"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >

            <TextView
                android:id="@+id/fragment_enable_super_boost_new_mode_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#7e7e7e"
                android:textSize="14dp"
                />

        </RelativeLayout>

    </RelativeLayout>


    <com.gto.zero.zboost.function.boost.enablesuper.TriangleView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/back_white"
        android:layout_centerHorizontal="true"
        />

</com.gto.zero.zboost.function.boost.enablesuper.EnableSuperDialogView>