<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clean_main_list_sub_item"
    android:layout_width="match_parent"
    android:layout_height="64dp" >

    <ImageView
        android:id="@+id/clean_main_list_sub_item_icon"
        android:layout_width="@dimen/clean_main_list_sub_item_icon_size"
        android:layout_height="@dimen/clean_main_list_sub_item_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_main_list_sub_item_icon_horizontal_margin"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/clean_main_list_sub_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_item_title_margin_left"
        android:ellipsize="middle"
        android:fontFamily="@string/font_families_roboto"
        android:maxLines="2"
        android:maxWidth="@dimen/clean_main_list_item_title_max_length"
        android:textColor="@color/common_list_item_text_color"
        android:textSize="@dimen/clean_main_list_sub_item_title_size" />

    <com.gto.zero.zboost.view.ItemCheckBox
        android:id="@+id/clean_main_list_sub_item_check"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/clean_list_common_content_horizontal_margin"
        android:gravity="bottom"
        android:paddingBottom="1dp" >

        <TextView
            android:id="@+id/clean_main_list_sub_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/common_list_item_text_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/clean_main_list_sub_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/clean_list_unit_color"
            android:textSize="10dp" />
    </LinearLayout>

</RelativeLayout>