<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#CC000000"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/notification_box_settings_guide_second_step"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="156dp"
            android:gravity="center"
            android:text="@string/notification_box_guide_first_desc"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <com.gto.zero.zboost.common.ui.CommonRoundButton
            android:id="@+id/notification_box_settings_guide_second_btn"
            android:layout_width="@dimen/common_round_button_layout_width"
            android:layout_height="@dimen/common_round_button_layout_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="@dimen/common_round_button_size"
                android:layout_height="@dimen/common_round_button_size"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/common_button_round_green_selector"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/common_next_button_icon"/>
        </com.gto.zero.zboost.common.ui.CommonRoundButton>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_box_settings_guide_first_step"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/notification_box_guide_arrow"/>
        <ImageView
            android:id="@+id/notification_box_settings_guide_first_desc_img"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:src="@drawable/notification_box_guide_drawer"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_box_settings_guide_first_desc_img"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/notification_box_guide_second_desc"
            android:textColor="@color/white"
            android:textSize="16sp"
        />
    </RelativeLayout>
</LinearLayout>

