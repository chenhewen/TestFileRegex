<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.view.FloatTitleScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewID"
    android:layout_width="match_parent"
    android:layout_height="@dimen/clean_main_scrollview_height"
    android:focusable="false"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/clean_main_scrollview_totalView" >

        <RelativeLayout
            android:id="@+id/clean_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/clean_main_scrollview_height" >

            <TextView
                android:id="@+id/clean_main_top_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:fontFamily="@string/font_families_roboto_thin"
                android:includeFontPadding="false"
                android:paddingTop="0dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="60dp" />

            <TextView
                android:id="@+id/fake_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:fontFamily="@string/font_families_roboto_thin"
                android:includeFontPadding="false"
                android:paddingTop="0dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/clean_main_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/clean_main_top_number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/clean_main_top_number"
                android:fontFamily="@string/font_families_roboto_light"
                android:includeFontPadding="false"
                android:text="B"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/clean_main_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clean_main_top_number"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/clean_main_top_number"
                android:fontFamily="@string/font_families_roboto_light"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/clean_main_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/clean_main_top_number"
                android:layout_alignParentTop="true"
                android:layout_marginTop="82dp"
                android:ellipsize="middle"
                android:fontFamily="@string/font_families_roboto"
                android:singleLine="true"
                android:textColor="#BFFFFFFF"
                android:textSize="10dp" />

            <com.gto.zero.zboost.view.FloatTitleProgressBar
                android:id="@+id/clean_main_progressbar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="80dp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/clean_main_scrollview_totalView"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/clean_main_scrollview_float_height_plus"
                android:visibility="invisible" >
            </TextView>

            <RelativeLayout
                android:id="@+id/floatViewID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/clean_main_scrollview_float_height" >
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/clean_main_scrollview_float_height_plus"
                android:visibility="invisible" >
            </TextView>
        </LinearLayout>
    </FrameLayout>

</com.gto.zero.zboost.view.FloatTitleScrollView>