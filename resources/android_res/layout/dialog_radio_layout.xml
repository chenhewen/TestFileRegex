<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.common.ui.RoundRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="@dimen/dialog_common_padding"
    android:paddingBottom="@dimen/dialog_common_padding">

    <TextView
        android:id="@+id/title"
        style="@style/dialog_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_common_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dialog_common_padding"
        android:ellipsize="middle"
        android:singleLine="true" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:cacheColorHint="#00000000"
        android:divider="#FFEBEBEB"
        android:dividerHeight="1dp"
        android:overScrollFooter="@null"
        android:listSelector="@null"
        android:overScrollMode="never" />

</com.gto.zero.zboost.common.ui.RoundRelativeLayout>