<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/power_saving_guide_cover_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>
    <LinearLayout
        android:id="@+id/power_saving_guide_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:orientation="vertical"
        android:background="@drawable/remote_pop_up_dialog_round_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/power_saving_top_corner_round_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/power_saving_guide_titlebar"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="28dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/power_saving_guide_title"
                android:textSize="20sp"
                android:textColor="#434a54"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#656d78"
                android:layout_marginTop="12dp"
                android:text="@string/power_saving_guide_desc"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccd1d9"/>
        <TextView
            android:id="@+id/power_saving_guide_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textColor="@color/dialog_common_button_green"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/common_dialog_btn_selector"
            android:text="@string/power_saving_guide_btn_enable"
            />
    </LinearLayout>
</RelativeLayout>