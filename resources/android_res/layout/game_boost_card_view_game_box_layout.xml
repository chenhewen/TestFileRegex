<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.function.gameboost.view.GameBoxView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/game_notice_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <LinearLayout 
            android:id="@+id/game_sort_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            >
        
        <TextView
            android:id="@+id/game_sort_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Name"
            android:textColor="@color/common_green_normal"
            android:textSize="14dp" />
        
        <ImageView
            android:id="@+id/game_sort_btn"
            android:layout_width="12dp"
            android:layout_height="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/activity_game_boost_sort_btn" />
        
        </LinearLayout>

        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/game_accel_game_box_title"
            android:textColor="#404040"
            android:textSize="14dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_notice_layout" >
    </FrameLayout>

</com.gto.zero.zboost.function.gameboost.view.GameBoxView>