<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height"
    android:paddingLeft="16dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/disable_list_item_app_icon"
        android:layout_width="@dimen/common_icon_width"
        android:layout_height="@dimen/common_icon_width"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

    <CheckBox
            android:id="@+id/disable_list_item_app_action_button"
            style="@style/common_horizontal_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:checked="false"
	        android:contentDescription="@null"
	        android:gravity="center"
	        android:paddingRight="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/disable_list_item_app_action_button"
        android:layout_toRightOf="@id/disable_list_item_app_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/disable_list_item_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:singleLine="true"
            android:text="GO Weather EX"
            android:textColor="#FF777777"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/disable_list_item_app_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:singleLine="true"
            android:text="@string/app_manager_preinstall_disbale_list_item_statement"
            android:textColor="#FFBEBEBE"
            android:textSize="11dp"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>