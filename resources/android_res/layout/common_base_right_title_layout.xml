<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.common.ui.BaseRightTitle
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_height">

    <View
        android:id="@+id/common_base_right_title_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/common_base_right_title_background_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/storage_main_act_bg"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/common_base_right_title_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.gto.zero.zboost.common.ui.ClickTransparentLayout
                android:id="@+id/common_base_right_title_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/common_base_right_title_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_title_back_padding_left"
                    android:contentDescription="@null"
                    android:src="@drawable/common_title_back"/>

                <TextView
                    android:id="@+id/common_base_right_title_text"
                    style="@style/common_title_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_title_main_text_margin_left"
                    android:ellipsize="middle"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="BaseTitle"
                    android:textStyle="normal"/>
            </com.gto.zero.zboost.common.ui.ClickTransparentLayout>
        </LinearLayout>

    </LinearLayout>


</com.gto.zero.zboost.common.ui.BaseRightTitle>