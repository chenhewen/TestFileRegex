<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clean_main_list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height" >

    <ImageView
        android:id="@+id/clean_main_list_item_icon"
        android:layout_width="@dimen/common_icon_width"
        android:layout_height="@dimen/common_icon_width"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_common_horizontal_margin"
        android:contentDescription="@null"
        android:maxHeight="@dimen/common_icon_width"
        android:maxWidth="@dimen/common_icon_width" />

    <TextView
        android:id="@+id/clean_main_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_item_title_margin_left"
        android:ellipsize="end"
        android:fontFamily="@string/font_families_roboto"
        android:maxWidth="@dimen/clean_main_list_item_title_max_length"
        android:singleLine="true"
        android:textColor="@color/common_list_item_text_color"
        android:textSize="@dimen/clean_list_group_total_size_text_size" />

    <com.gto.zero.zboost.view.GroupSelectBox
        android:id="@+id/clean_main_list_item_check"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:paddingLeft="@dimen/clean_list_common_horizontal_margin"
        android:paddingRight="@dimen/clean_list_common_horizontal_margin"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/clean_list_common_content_horizontal_margin"
        android:gravity="bottom"
        android:paddingBottom="1dp" >

        <TextView
            android:id="@+id/clean_main_list_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/common_list_item_text_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/clean_main_list_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/clean_list_unit_color"
            android:textSize="10dp" />
    </LinearLayout>

    <include
        android:id="@+id/clean_main_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_listview_divider_height_level1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_listview_divider_margin_bottom"
        layout="@layout/common_listview_divider_level1_layout" />

    <View
        android:id="@+id/clean_main_list_item_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:visibility="gone" />

</RelativeLayout>