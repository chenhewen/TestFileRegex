<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.function.shuffle.view.ShuffleNoNetWorkView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shuffle_no_network_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/shuffle_no_network"/>

    <TextView
        android:id="@+id/shuffle_no_network_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shuffle_no_network_img"
        android:layout_centerHorizontal="true"
        android:fontFamily="@string/font_families_roboto"
        android:singleLine="true"
        android:textSize="18dp"/>

</com.gto.zero.zboost.function.shuffle.view.ShuffleNoNetWorkView>