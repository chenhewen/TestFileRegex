<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/language_setting_item_height">

    <TextView
        android:id="@+id/language_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_families_roboto"
        android:singleLine="true"
        android:text="System Default"
        android:textColor="@color/common_green_normal"
        android:textSize="16dp"
        android:textStyle="normal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp" />
    
    <ImageView
        android:id="@+id/language_state"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:src="@drawable/common_select_empty"
        android:layout_marginRight="16dp"
        android:visibility="gone" />
    
   <com.gto.zero.zboost.view.ProgressWheel
        android:id="@+id/language_download_progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="@color/common_green_normal"
        wheel:matProg_barWidth="2dp"
        wheel:matProg_progressIndeterminate="true"
        android:layout_marginRight="16dp"
        android:visibility="gone"/>

</RelativeLayout>