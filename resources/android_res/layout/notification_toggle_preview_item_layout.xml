<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

    <TextView
        android:id="@+id/type_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:fontFamily="@string/font_families_roboto"
        android:singleLine="true"
        android:text="@string/notification_toggle_settings_label_zspeed"
        android:textColor="@color/common_green_normal"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 通知栏布局 -->

        <LinearLayout
            android:id="@+id/notice_toggles_layout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/notification_toggle_theme_preview_bg_white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/notice_toggle_icon_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/notification_toggle_icon" />

            <ImageView
                android:id="@+id/notice_toggle_icon_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/notification_toggle_icon" />

            <ImageView
                android:id="@+id/notice_toggle_icon_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/notification_toggle_icon" />

            <ImageView
                android:id="@+id/notice_toggle_icon_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/notification_toggle_icon" />

            <ImageView
                android:id="@+id/notice_toggle_icon_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/notification_toggle_icon" />

            <ImageView
                android:id="@+id/notice_toggle_icon_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/notification_toggle_icon" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/toggle_preview_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="#00000000"
            android:button="@drawable/app_item_checkbox_red_checkbox"
            android:checked="true"
            android:minWidth="24dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- 名称区 -->

    <LinearLayout
        android:id="@+id/notice_toggle_names_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/toggle_name_tv_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/notification_toggle_toggle_name_app"
            android:textColor="#FF777777"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/toggle_name_tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/notification_toggle_toggle_name_app"
            android:textColor="#FF777777"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/toggle_name_tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/notification_toggle_toggle_name_app"
            android:textColor="#FF777777"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/toggle_name_tv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/notification_toggle_toggle_name_app"
            android:textColor="#FF777777"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/toggle_name_tv_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/notification_toggle_toggle_name_app"
            android:textColor="#FF777777"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/toggle_name_tv_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/notification_toggle_toggle_name_app"
            android:textColor="#FF777777"
            android:textSize="10sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>