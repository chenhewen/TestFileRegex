<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/main_menu_item_height"
    android:background="@drawable/menu_item_selector"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        >


        <ImageView
            android:id="@+id/main_menu_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_about_icon"
            android:visibility="gone"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="32dp"
            >

            <ImageView
                android:id="@+id/main_menu_item_lable"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/red_icon_bg"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/main_menu_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/main_menu_item_lable"
                android:fontFamily="@string/font_families_roboto"
                android:singleLine="true"
                android:textColor="#FF868686"
                android:textSize="16sp"
                android:textStyle="normal"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>