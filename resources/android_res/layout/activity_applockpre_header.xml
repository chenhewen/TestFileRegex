<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#F5F7FA"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/applock_pre_header_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFED5565"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/applock_pre_header_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applock_pre_header_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="@string/applock_pre_header_text2_new"
            android:textColor="#656D78"
            android:textSize="14dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_listview_divider_height_level0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1px"
        android:background="#ffd5d5d5"/>

</RelativeLayout>