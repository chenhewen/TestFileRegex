<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9f9f9" >

    <FrameLayout
        android:id="@+id/rocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/start_page_rocket" >
    </FrameLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_about"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/app_name"
        android:textColor="#404040"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/common_slogan"
        android:textColor="#404040"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/declaration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/law_one_setting_about"
        android:textColor="#FF9A9A9A"
        android:textSize="10sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/join_uep_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/declaration"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <CheckBox
            android:id="@+id/join_uep_cb"
            android:layout_width="18dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:button="@drawable/start_page_checkbox_selector"
            android:checked="true"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/join_uep_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/private_join_uep"
            android:textColor="#FF9A9A9A"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/private_policy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/join_uep_container"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:text="@string/privacy_start_by_agree_policy"
        android:textColor="#FF9A9A9A"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/start_btn"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_above="@id/private_policy_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/start_page_btn_selector"
        android:gravity="center"
        android:text="@string/private_start"
        android:textColor="@color/start_page_btn_text_selector"
        android:textSize="17sp"
        android:visibility="visible" />

</RelativeLayout>