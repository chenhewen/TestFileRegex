<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/deep_cache_promote_cover_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/remote_pop_up_dialog_round_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/dialog_corner_right"/>

        <RelativeLayout
            android:id="@+id/deep_cache_promote_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin">

            <ImageView
                android:id="@+id/deep_cache_promote_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/appmanager_default_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/deep_cache_promote_icon"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/deep_cache_promote_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/uninstall_dialog_message_2"
                    android:textColor="#434a54"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deep_cache_promote_size"
                    android:layout_marginTop="4dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="@string/deep_clean_promote_dialog_content"
                    android:textColor="#656d78"
                    android:textSize="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deep_cache_promote_info_layout"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/deep_cache_promote_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:button="@drawable/start_page_checkbox_selector"
                        android:minWidth="14dp"/>

                    <TextView
                        android:id="@+id/deep_cache_promote_dismiss_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:text="@string/common_dismiss_message"
                        android:textColor="#aab2bd"
                        android:textSize="12sp"
                        />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/deep_cache_promote_info_layout"
            android:background="#ededed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deep_cache_promote_info_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deep_cache_promote_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_round_btn_selector"
                android:gravity="center"
                android:text="@string/common_dismiss"
                android:textColor="@color/dialog_common_button_light"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/deep_cache_promote_btn_ok"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_round_btn_selector"
                android:gravity="center"
                android:text="@string/common_view"
                android:textColor="@color/dialog_common_button_green"
                android:textSize="18sp"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>