<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp" >

    <TextView
        android:id="@+id/file_category_sec_list_header_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:text="3.0 GB Used  5.4 GB Total"
        android:textColor="#89FFFFFF"
        android:textSize="14dp" />

    <com.gto.zero.zboost.common.ui.DistributionBar
        android:id="@+id/file_category_sec_list_header_bar"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_below="@id/file_category_sec_list_header_top_text"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <LinearLayout
        android:id="@+id/file_category_sec_list_header_bottom_color_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_category_sec_list_header_bar"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp" >
    </LinearLayout>

</RelativeLayout>