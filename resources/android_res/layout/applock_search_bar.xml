<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.function.applock.view.AppLockSearchBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_height" >
    
    <View
        android:id="@+id/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF434A54"
        />

    <View
        android:id="@+id/background_drawable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/storage_main_act_bg"
        />
    
    <RelativeLayout
        android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    
	    <ImageView
	        android:id="@+id/back_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_centerVertical="true"
	        android:paddingLeft="@dimen/common_title_back_padding_left"
	        android:paddingRight="@dimen/common_title_back_padding_left"
	        android:clickable="true"
	        android:src="@drawable/common_title_back"/>
	    
	    <ImageView
	        android:id="@+id/search_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/back_btn"
	        android:src="@drawable/applock_search"/>
	    
	    <EditText 
	        android:id="@+id/search_edittext"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:layout_toRightOf="@id/search_icon"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="@dimen/common_title_back_padding_left"
	        android:background="@color/trans"
	        android:textColor="@color/white"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        />
	    
		<View 
		    android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_toRightOf="@id/search_icon"
	        android:layout_below="@id/search_edittext"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="@dimen/common_title_back_padding_left"
	        android:background="@color/white"
	        />
    </RelativeLayout>
    
</com.gto.zero.zboost.function.applock.view.AppLockSearchBar>