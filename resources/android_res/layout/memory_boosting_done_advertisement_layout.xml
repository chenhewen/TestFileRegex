<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="82dp"
    android:layout_height="82dp"
    android:clipChildren="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/common_shape_rounded_rectangle_black"
        android:orientation="vertical"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >

        <ImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/common_button_round_white_selector" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Install"
            android:textColor="@color/common_green_normal"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_icon_layout"
        android:layout_width="64dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="9dp" >

        <TextView
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/boost_advertisement_shape_rounded_rectangle"
            android:gravity="center"
            android:text="AD"
            android:textColor="#000"
            android:textSize="8sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/app_icon_layout"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="Zspeed+"
            android:scrollHorizontally="true"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="47dp"
            android:maxLines="2"
            android:text="A very nice tool to speed up your phone."
            android:textColor="#FFF"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>