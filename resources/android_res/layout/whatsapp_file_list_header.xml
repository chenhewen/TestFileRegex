<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_title_item_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:ellipsize="middle"
        android:fontFamily="@string/font_families_roboto"
        android:gravity="center"
        android:maxLines="1"
        android:text="Select All"
        android:textColor="#FF808080"
        android:textSize="12sp"/>

    <com.gto.zero.zboost.view.ItemCheckBox
        android:id="@+id/whatsapp_file_list_header_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin"
        android:src="@drawable/common_select_null"
        />

</RelativeLayout>