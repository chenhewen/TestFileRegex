<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.function.rate.view.RateGpDialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:paddingTop="@dimen/dialog_common_padding" >

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dialog_common_padding" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/rate_dialog_rate" />

        <TextView
            android:id="@+id/tv_top"
            style="@style/dialog_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon"
            android:paddingLeft="@dimen/dialog_common_padding"
            android:text="@string/rate_gp_dialog_rate_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottpm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/tv_right"
            style="@style/dialog_common_button_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_dialog_btn_selector"
            android:clickable="true"
            android:padding="@dimen/dialog_common_padding"
            android:text="@string/rate_gp_dialog_three_yes" />

        <TextView
            android:id="@+id/tv_left"
            style="@style/dialog_rate_button_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_right"
            android:background="@drawable/common_dialog_btn_selector"
            android:clickable="true"
            android:padding="@dimen/dialog_common_padding"
            android:text="@string/rate_gp_dialog_three_no" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clipChildren="false"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_container"
            style="@style/dialog_common_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dialog_common_padding"
            android:paddingRight="@dimen/dialog_common_padding"
            android:text="@string/rate_gp_dialog_three_notice" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:clipChildren="false"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/rate_star0_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:src="@drawable/rate_dialog_star_no" />

            <ImageView
                android:id="@+id/rate_star1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:src="@drawable/rate_dialog_star_no" />

            <ImageView
                android:id="@+id/rate_star2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:src="@drawable/rate_dialog_star_no" />

            <ImageView
                android:id="@+id/rate_star3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:src="@drawable/rate_dialog_star_no" />

            <ImageView
                android:id="@+id/rate_star4_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:src="@drawable/rate_dialog_star_no" />
        </LinearLayout>
    </LinearLayout>

</com.gto.zero.zboost.function.rate.view.RateGpDialogView>