<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.function.applock.view.widget.number.LockerNumberPasswordSelector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/locker_number_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/locker_number_pwd_selecter_normal"
            android:id="@+id/number_pwd_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:src="@drawable/locker_number_pwd_selecter_normal"
            android:id="@+id/number_pwd_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:src="@drawable/locker_number_pwd_selecter_normal"
            android:id="@+id/number_pwd_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            tools:ignore="ContentDescription"/>
        <ImageView
            android:src="@drawable/locker_number_pwd_selecter_normal"
            android:id="@+id/number_pwd_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"/>
    </LinearLayout>

    <TextView
        android:id="@+id/locker_number_pwd_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locker_number_pwd"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dip"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="@string/initializationpassword_frist_prompt"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:visibility="gone"/>
</com.gto.zero.zboost.function.applock.view.widget.number.LockerNumberPasswordSelector>
