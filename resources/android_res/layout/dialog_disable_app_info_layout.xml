<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/dialog_common_padding"
    android:paddingTop="@dimen/dialog_common_padding"
    android:id="@+id/disable_app_info_dialog_container" >

    <LinearLayout 
        android:id="@+id/disable_app_info_dialog_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/preinstall_disable_app_info_dialog_header_margin_bottom"
        android:orientation="horizontal">
       	   <ImageView 
       	       android:id="@+id/disable_app_info_dialog_icon"
       	       android:layout_width="@dimen/preinstall_disable_app_info_dialog_icon_width"
       	       android:layout_height="@dimen/preinstall_disable_app_info_dialog_icon_width"
       	       android:layout_marginRight="@dimen/dialog_common_padding"
       	       android:src="@drawable/ic_launcher"
       	       />
           <TextView
	        android:id="@+id/disable_app_info_dialog_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textSize="@dimen/dialog_common_title_size_v1_13"
	        android:fontFamily="@string/font_families_roboto"
	        android:textColor="@color/common_dialog_title_color_v1_13"
	        android:singleLine="true"
	        android:gravity="center"
	        android:text="@string/app_name"
	         />
    </LinearLayout>

    <TextView
        android:id="@+id/disable_app_info_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/dialog_common_button_text_size"
        android:fontFamily="@string/font_families_roboto"
        android:textColor="@color/preinstall_disable_text_color_red"
        android:background="@drawable/common_dialog_btn_selector"
        android:clickable="true"
        android:padding="@dimen/dialog_common_padding"
        android:text="@string/disable_app_info_dialog_disable_btn_text"
        />

    <TextView
        android:id="@+id/disable_app_info_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/disable_app_info_dialog_confirm"
        android:background="@drawable/common_dialog_btn_selector"
        android:clickable="true"
        style="@style/dialog_common_button_light"
        android:padding="@dimen/dialog_common_padding"
        android:text="@string/common_cancel"
         />

    <RelativeLayout
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/disable_app_info_dialog_confirm"
        android:layout_below="@id/disable_app_info_dialog_header"
        android:layout_marginRight="@dimen/dialog_common_padding">
        <TextView 
            android:id="@+id/disable_app_info_dialog_content_text"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/dialog_common_detail_size"
	        android:fontFamily="@string/font_families_roboto"
	        android:textColor="@color/dialog_common_detail_color"
	        android:gravity="left"
	        android:text="@string/app_name"
	        android:layout_marginBottom="@dimen/dialog_common_padding"/>
        <TextView 
            android:id="@+id/disable_app_info_dialog_tip_text"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/dialog_common_detail_size"
	        android:fontFamily="@string/font_families_roboto"
	        android:textColor="@color/preinstall_disable_text_color_red"
	        android:layout_below="@id/disable_app_info_dialog_content_text"
	        android:gravity="left"
	        android:text="@string/app_name"/>
    </RelativeLayout>

</RelativeLayout>