    android:background="#ff000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_anchor"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rocket_anchor"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </RelativeLayout>
</LinearLayout>