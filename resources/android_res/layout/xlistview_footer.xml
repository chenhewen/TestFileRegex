<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zboost="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/xlistview_footer_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:paddingTop="20dp">

        <com.gto.zero.zboost.function.gameboost.view.GameAccelLoadingView
            android:id="@+id/xlistview_footer_progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            zboost:loading_width="40dp" />

        <ImageView
            android:id="@+id/xlistview_footer_hint_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/game_boost_distribute_loading_icon" />
    </RelativeLayout>

</LinearLayout>