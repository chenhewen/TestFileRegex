<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/remote_pop_up_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/remote_pop_up_text_dialog"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/remote_pop_up_dialog_round_bg"
            android:orientation="vertical"
            android:paddingTop="14sp"
            android:visibility="gone">

            <TextView
                android:id="@+id/remote_pop_up_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center"
                android:paddingLeft="@dimen/dialog_common_padding"
                android:paddingRight="@dimen/dialog_common_padding"
                android:singleLine="true"
                android:text="Hello World"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/dialog_common_title_size"/>

            <TextView
                android:id="@+id/remote_pop_up_text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="5"
                android:paddingBottom="28dp"
                android:paddingLeft="@dimen/dialog_common_padding"
                android:paddingRight="@dimen/dialog_common_padding"
                android:paddingTop="10dp"
                android:text="life is good, the world is wonderful.xxxxxx"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/dialog_common_detail_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#737373"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remote_pop_up_text_btn_CLOSE"
                    android:layout_width="1dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_dialog_btn_selector"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center"
                    android:text="@string/common_cancel"
                    android:textColor="#3f3f3f"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/remote_pop_up_text_btn_ok"
                    android:layout_width="1dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_dialog_btn_selector"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/common_ok"
                    android:textColor="#2196f3"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/remote_pop_up_img_dialog"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/remote_pop_up_dialog_round_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remote_pop_up_img_title"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:fontFamily="@string/font_families_roboto"
                android:gravity="center"
                android:paddingLeft="@dimen/dialog_common_padding"
                android:paddingRight="@dimen/dialog_common_padding"
                android:singleLine="true"
                android:text="Hello World"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/dialog_common_title_size"/>

            <ImageView
                android:id="@+id/remote_pop_up_img_desc"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:scaleType="fitXY"
                android:text="life is good, you are excellent."
                android:textSize="@dimen/dialog_common_detail_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remote_pop_up_img_btn_CLOSE"
                    android:layout_width="1dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_dialog_btn_selector"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center"
                    android:text="@string/common_cancel"
                    android:textColor="#3f3f3f"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/remote_pop_up_img_btn_ok"
                    android:layout_width="1dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_dialog_btn_selector"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/common_ok"
                    android:textColor="#2196f3"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>