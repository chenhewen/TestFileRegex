<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_module_item_height"
    android:background="@drawable/common_list_item_white_selector" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/common_margin"
                android:fontFamily="@string/font_families_roboto"
                android:textColor="@color/common_module_name"
                android:textSize="@dimen/clean_list_common_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_margin"
            android:fontFamily="@string/font_families_roboto"
            android:text="3"
            android:textColor="@color/common_module_name"
            android:textSize="17sp" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_listview_divider_height_level0"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/common_listview_divider_margin_bottom"
        layout="@layout/common_listview_divider_level0_layout" />

</FrameLayout>