<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="36dp"
              android:layout_marginRight="36dp"
              android:clipChildren="false"
              android:clipToPadding="false"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingTop="4dp"
            android:src="@drawable/function_ad_chglock_battery_normal"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:text="szdajksdaksjd"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="szdajksdaksjdhjkasdajsdszdajksdaksjdhjkasdajsd"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btn"
        android:layout_width="184dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/function_ad_button_bg_selector"
        android:gravity="center"
        android:textColor="#eba85d"
        android:textSize="16sp"/>

</LinearLayout>