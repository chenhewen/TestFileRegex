<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/home_page_drawer_theme_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:paddingBottom="3dp"
        android:maxLines="1"
        android:text="@string/home_page_drawer_theme"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/theme_checkbox_default"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/home_page_drawer_theme_default_checkbox" />

    <ImageView
        android:id="@+id/theme_checkbox_colorful"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/home_page_drawer_theme_colorful_checkbox" />

</LinearLayout>