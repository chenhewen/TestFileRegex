<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f7fa"
              android:orientation="vertical"
              android:paddingTop="26dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/deep_clean_single_list_item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            >

            <ImageView
                android:id="@+id/deep_clean_single_list_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/deep_clean_app_icon"/>

            <TextView
                android:id="@+id/deep_clean_single_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="80dp"
                android:layout_toRightOf="@id/deep_clean_single_list_item_icon"
                android:singleLine="true"
                android:text="Junk files from apps Junk files from apps"
                android:textColor="#434a54"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/deep_clean_single_list_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="22.1 MB"
                android:textColor="#7b7f85"
                android:textSize="16sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/deep_clean_single_list_item_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deep_clean_single_list_item_top"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/deep_clean_single_list_item_text_desc"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="5"
                android:text="this is some desc..this is some desc this is some desc........."
                android:textColor="#de434a54"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/deep_clean_single_list_item_img_desc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/deep_clean_single_list_item_text_desc"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/deep_clean_single_list_item_img_desc_img1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/file_category_image_item_bg"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/deep_clean_single_list_item_img_desc_img2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/file_category_image_item_bg"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/deep_clean_single_list_item_img_desc_img3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/file_category_image_item_bg"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/deep_clean_single_list_item_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deep_clean_single_list_item_middle"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccd1d9"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <View
                    android:id="@+id/deep_clean_single_list_item_progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#a0d468"
                    />

                <TextView
                    android:id="@+id/deep_clean_single_list_item_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/common_dialog_btn_selector"
                    android:gravity="center"
                    android:text="CLEAN"
                    android:textColor="#ed5565"
                    android:textSize="14sp"/>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ccd1d9"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/deep_clean_single_list_item_completed"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/common_select"/>

                <TextView
                    android:id="@+id/deep_clean_single_list_item_completed_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="2.1 MB Cleaned"
                    android:textColor="#8cc152"
                    android:textSize="18sp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>