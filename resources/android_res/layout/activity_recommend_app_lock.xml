<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/remote_pop_up_dialog_round_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recommend_app_lock_top_corner_round_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/recommend_applock_banner" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="24dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recommend_app_lock_dialog_title"
                android:textColor="#434a54"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recommend_app_lock_dialog_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="recommend_app_lock_dialog_desc"
                android:textColor="#656d78"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccd1d9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recommend_app_lock_dialog_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_btn_selector"
                android:gravity="center"
                android:text="@string/common_cancel"
                android:textColor="#656d78"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recommend_app_lock_dialog_yes_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_btn_selector"
                android:gravity="center"
                android:text="@string/finish_page_card_app_locker_btn"
                android:textColor="#4a89dc"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>