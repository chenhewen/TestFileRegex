<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/home_drawer_item_margin"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="@dimen/home_drawer_item_margin" />

    <TextView
        android:id="@+id/icon_with_num"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="@dimen/home_drawer_item_margin_for_num"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/home_drawer_item_margin_for_num"
        android:background="@drawable/drawer_item_icon"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_new_flag_bg_red"
        android:ellipsize="end"
        android:fontFamily="@string/font_families_roboto"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:singleLine="true"
        android:text="@string/common_new"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="normal"
        android:visibility="gone" />
</LinearLayout>
