<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/rocket_view_func"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo"
            android:layout_marginLeft="4dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/float_logo"/>
        <TextView
            android:id="@+id/label"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/white"
            android:text="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/arrow"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/float_hide_top"/>
        <ImageView
            android:id="@+id/setting"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/float_common_title_more"/>
    </LinearLayout>
    <com.gto.zero.zboost.floatwindow.search.view.FloatWindowRocketView
        android:id="@+id/rocket_view_bar"
        android:layout_below="@id/rocket_view_func"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        >
    </com.gto.zero.zboost.floatwindow.search.view.FloatWindowRocketView>
</RelativeLayout>
