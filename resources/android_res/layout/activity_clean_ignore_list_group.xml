<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/clean_list_group_height"
                android:background="@drawable/common_list_item_white_selector">

    <ImageView
        android:id="@+id/clean_ignore_list_group_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_common_horizontal_margin"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/clean_ignore_list_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_common_content_horizontal_margin"
        android:layout_marginRight="@dimen/clean_list_common_content_horizontal_margin"
        android:ellipsize="middle"
        android:fontFamily="@string/font_families_roboto"
        android:maxLines="2"
        android:textColor="@color/common_module_name"
        android:textSize="@dimen/clean_list_common_text_size"/>

    <include
        layout="@layout/common_listview_divider_level0_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_listview_divider_height_level0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_listview_divider_margin_bottom"/>

</RelativeLayout>