<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/whatsapp_file_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none"/>
    <RelativeLayout
        android:id="@+id/whatsapp_file_no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/whatsapp_img_no_content_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:src="@drawable/no_content"
            />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatsapp_img_no_content_img"
            android:layout_centerHorizontal="true"
            android:text="@string/duplicate_photos_no_content"
            android:textColor="#8a000000"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>