<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    >

    <include
        android:id="@+id/title_notification_setting"
        layout="@layout/common_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_notification_setting"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/container_notification_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mode_group_notification_setting"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:text="@string/notification_setting_mode"
                    android:textColor="@color/common_green_normal"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="#e6e9ed"/>

                <include
                    android:id="@+id/auto_mode_item_notification_setting"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/manual_mode_item_notification_setting"
                    layout="@layout/menu_module_item_view"
                    />
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/boost_group_notification_setting"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="16dp"
                            android:text="@string/notification_setting_manual_boost"
                            android:textColor="@color/common_green_normal"
                            android:textSize="16dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="16dp"
                            android:background="#e6e9ed"/>

                        <include
                            android:id="@+id/scan_boost_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/over_boost_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/cpu_boost_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/boot_boost_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                    </LinearLayout>
                    <!-- -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/clean_group_notification_setting"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"

                            android:gravity="center_vertical|left"
                            android:paddingLeft="16dp"
                            android:text="@string/notification_setting_manual_clean"
                            android:textColor="@color/common_green_normal"
                            android:textSize="16dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="16dp"
                            android:background="#e6e9ed"/>

                        <include
                            android:id="@+id/over_clean_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/left_clean_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/clean_scan_clean_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/size_clean_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/days_clean_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />

                        <include
                            android:id="@+id/whtasapp_clean_group_notification_setting"
                            layout="@layout/menu_module_item_view"
                            />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/container_detail_notification_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                
            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>