<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="@dimen/home_guide_page_content_layout_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_guide_card_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto_light"
            android:maxLines="1"
            android:text="Taking photos is easy"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/home_guide_card_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto_light"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/home_guide_card_desc_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto_thin"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="48sp"/>
    </LinearLayout>

    <include
        android:id="@+id/home_guide_card_btn"
        layout="@layout/common_round_button_layout"
        android:layout_width="@dimen/home_guide_page_button_size"
        android:layout_height="@dimen/home_guide_page_button_shadow_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/home_guide_page_btn_top"/>

</RelativeLayout>