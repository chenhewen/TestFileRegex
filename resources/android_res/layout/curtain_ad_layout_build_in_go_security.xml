<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/curtain_ad_layout"
    android:paddingTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/curtain_ad_core_cortainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="6dp" >

        <com.gto.zero.zboost.view.HatImageView
            android:id="@+id/curtain_ad_icon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="14dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/curtain_ad_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/curtain_ad_icon"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/curtain_ad_icon"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@string/font_families_roboto"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#7e7e7e"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/curtain_ad_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/curtain_ad_name"
            android:layout_toLeftOf="@id/curtain_ad_icon"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="right"
            android:maxLines="2"
            android:text=""
            android:textColor="#7e7e7e"
            android:textSize="12sp" />
    </RelativeLayout>

    <com.gto.zero.zboost.view.SnowImageView
        android:id="@+id/curtain_ad_banner"
        android:layout_width="294dp"
        android:layout_height="154dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/curtain_ad_button"
        android:layout_width="184dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/function_ad_button_bg_selector_security_blue"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>