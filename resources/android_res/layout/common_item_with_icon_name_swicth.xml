<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.notification.notificationbox.CommonStyleItemWithIconNameSwitch
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="56dp"
        >

        <ImageView
            android:id="@+id/common_item_icon"
            android:layout_width="@dimen/common_icon_width"
            android:layout_height="@dimen/common_icon_width"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            tools:src="@drawable/ic_launcher"
            />

        <RelativeLayout
            android:id="@+id/common_item_switch_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/common_item_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/open_setting_setting"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/common_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@id/common_item_switch_container"
            android:layout_toRightOf="@id/common_item_icon"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/menu_setting_ok"
            android:textSize="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d7d7d7"
            />

    </RelativeLayout>


</com.gto.zero.zboost.notification.notificationbox.CommonStyleItemWithIconNameSwitch>