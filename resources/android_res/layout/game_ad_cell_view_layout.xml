<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/game_boost_cell_item_width"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_item_white_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ad_icon_view"
        android:layout_width="@dimen/game_boost_cell_item_icon_size"
        android:layout_height="@dimen/game_boost_cell_item_icon_size"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/common_no_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ad_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#FF777777"
        android:textSize="12dp" />

</LinearLayout>