<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    >

    <include
        android:id="@+id/title_setting_setting_v2"
        layout="@layout/common_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_setting_setting_v2"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/container_setting_setting_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/notification_group_setting_setting_v2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_green_normal"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="#e6e9ed"/>

                <include
                    android:id="@+id/toggle_notification_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/setting_notification_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/floatview_group_setting_setting_v2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_green_normal"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="#e6e9ed"/>

                <include
                    android:id="@+id/switch_floatview_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/hide_floatview_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/deskonly_floatview_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/speed_group_setting_setting_v2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_green_normal"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="#e6e9ed"/>

                <include
                    android:id="@+id/close_speed_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/result_speed_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/ignorelist_speed_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/clean_group_setting_setting_v2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_green_normal"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="#e6e9ed"/>

                <include
                    android:id="@+id/boost_clean_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />


                <include
                    android:id="@+id/ignorelist_clean_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/charge_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/charge_group_setting_setting_v2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_green_normal"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="#e6e9ed"/>

                <include
                    android:id="@+id/switch_charge_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/general_group_setting_setting_v2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@string/font_families_roboto"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_green_normal"
                    android:textSize="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="#e6e9ed"/>

                <include
                    android:id="@+id/shortcut_general_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/language_general_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/user_general_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/upgrade_general_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />

                <include
                    android:id="@+id/about_general_group_setting_setting_v2"
                    layout="@layout/menu_module_item_view"
                    />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>