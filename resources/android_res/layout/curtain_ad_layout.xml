<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.ad.view.CurtainView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:curtain="http://schemas.android.com/apk/res-auto"
    xmlns:triangle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curtain_ad_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    curtain:backColor="#ffffff"
    curtain:direction="down"
    curtain:frontColor="#0097D04F"
    curtain:middleHeight="160dp"
    curtain:mode="reverse"
    curtain:pivot="rightBottom"
    curtain:ratio="0.32" >

    <ImageView
        android:id="@+id/curtain_ad_icon"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_above="@+id/curtain_ad_button"
        android:layout_alignRight="@+id/curtain_ad_button"
        android:layout_marginLeft="14dp" />

    <TextView
        android:id="@+id/curtain_ad_name"
        android:layout_width="wrap_content"
        android:maxWidth="190dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/curtain_ad_icon"
        android:layout_toLeftOf="@id/curtain_ad_icon"
        android:fontFamily="@string/font_families_roboto"
        android:textColor="#7e7e7e"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/curtain_ad_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/curtain_ad_button"
        android:layout_below="@id/curtain_ad_name"
        android:layout_toLeftOf="@id/curtain_ad_icon"
        android:fontFamily="@string/font_families_roboto"
        android:text="this is a pretty good app for your smart phone!"
        android:gravity="right"
        android:maxLines="2"
        android:textColor="#7e7e7e"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/curtain_ad_button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ad_button_red_selector"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/storage_main_act_details"
        android:textColor="#ffffff" />

    <com.gto.zero.zboost.common.ui.CustomTriangleView
        android:layout_width="40dp"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        triangle:vertexPosition="right"
        triangle:color="#7e7e7e" >
    </com.gto.zero.zboost.common.ui.CustomTriangleView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:gravity="right"
        android:text="AD"
        android:layout_marginRight="2dp"
        android:textColor="#ffffff"
        android:textSize="8sp"
        android:textStyle="bold" />

</com.gto.zero.zboost.ad.view.CurtainView>