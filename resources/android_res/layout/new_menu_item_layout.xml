<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/main_menu_item_height"
    android:background="@drawable/menu_item_selector"
    >


    <RelativeLayout
        android:id="@+id/menu_lable_layout"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/menu_red_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/red_icon_bg"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/menu_lable_layout"
        android:fontFamily="@string/font_families_roboto"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColor="#FF868686"
        android:textSize="16sp"
        android:textStyle="normal"
        />


</RelativeLayout>