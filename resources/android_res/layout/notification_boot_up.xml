<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/boot_up_notification_bg"
                android:src="@drawable/boot_up_dialog_green_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3sp"
                    android:gravity="center|left">
                    <TextView
                        android:id="@+id/boot_up_notification_title_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#33000000"
                        android:text="Booting Speed"/>
                    <TextView
                        android:id="@+id/boot_up_notification_desc_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#33000000"
                        android:textSize="30sp"
                        android:text="20s"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:layout_marginRight="102dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left">
                    <TextView
                        android:id="@+id/boot_up_notification_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Booting Speed"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/boot_up_notification_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:layout_alignParentLeft="true"
                            android:text="20s"/>

                        <LinearLayout
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/boot_up_notification_desc"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/boot_up_notification_icon1"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="8dp"
                                android:scaleType="fitCenter"/>

                            <ImageView
                                android:id="@+id/boot_up_notification_icon2"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="8dp"
                                android:scaleType="fitCenter"/>

                            <ImageView
                                android:id="@+id/boot_up_notification_icon3"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="8dp"
                                android:scaleType="fitCenter"/>

                            <ImageView
                                android:id="@+id/boot_up_notification_icon4"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="8dp"
                                android:scaleType="fitCenter"/>

                            <ImageView
                                android:id="@+id/boot_up_notification_icon5"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="fitCenter"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="6dp">
                <LinearLayout
                    android:id="@+id/boot_up_dialog_btn"
                    android:gravity="center"
                    android:background="@drawable/boot_up_button_bg_selector"
                    android:orientation="horizontal"
                    android:layout_width="102dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/boot_up_notification_btn_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/boot_up_boost_arrow"
                        android:layout_marginRight="4dp"
                        android:paddingBottom="6dp"/>
                    <TextView
                        android:id="@+id/boot_up_notification_btn_str"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#434a54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/boot_up_optimize"
                        android:paddingBottom="6dp"
                        />
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>