<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height">

    <ImageView
        android:id="@+id/clean_ignore_list_item_icon"
        android:layout_width="@dimen/common_icon_width"
        android:layout_height="@dimen/common_icon_width"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_common_horizontal_margin"
        android:contentDescription="@null"
        android:maxHeight="@dimen/common_icon_width"
        android:maxWidth="@dimen/common_icon_width"/>

    <ImageView
        android:id="@+id/clean_ignore_list_item_icon_small"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/clean_ignore_list_item_icon"
        android:layout_alignRight="@id/clean_ignore_list_item_icon"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/clean_list_item_title_margin_left"
        android:layout_marginRight="@dimen/clean_list_item_title_margin_left"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clean_ignore_list_item_title"
            style="@style/common_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/clean_ignore_list_item_subtitle"
            style="@style/common_item_info_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/clean_ignore_list_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="true"
        android:contentDescription="@null"
        android:gravity="center"
        android:paddingLeft="@dimen/clean_list_common_horizontal_margin"
        android:paddingRight="@dimen/clean_list_common_horizontal_margin"
        android:src="@drawable/app_remove"/>

    <include
        layout="@layout/common_listview_divider_level1_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_listview_divider_height_level1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_listview_divider_margin_bottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:visibility="gone"/>

</RelativeLayout>