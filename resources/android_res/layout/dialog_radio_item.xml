<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dialog_common_padding"
    android:paddingRight="@dimen/dialog_common_padding"
    android:background="@drawable/dialog_item_selector"
>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_module_item_height"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:fontFamily="@string/font_families_roboto"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#FF777777"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_select_empty"
    />
</LinearLayout>