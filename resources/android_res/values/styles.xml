<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Activity的常规主题 -->
    <style name="Common.Activity.Theme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- AccessibilityBoostAidActivity的主题 -->
    <style name="AccessibilityBoostAidActivity.Theme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimation_NoAnimation</item>
    </style>

    <!-- MemoryBoostingActivity的主题 -->
    <style name="MemoryBoostingActivity.Theme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>

    <!-- UninstallActivity的主题 -->
    <style name="UninstallActivity.Theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!-- 无动画窗口样式 -->
    <style name="WindowAnimation_NoAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <!-- 标题的字体风格 -->
    <style name="common_title_main_text">
        <item name="android:textSize">@dimen/common_title_main_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 通用勾选checkbox -->
    <style name="common_tick_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/common_tick_checkbox_selector</item>
    </style>

    <!-- 通用左右滑动checkbox -->
    <style name="common_horizontal_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/common_horizontal_checkbox_selector</item>
    </style>

    <!-- 通用模块名称TextView的样式 -->
    <style name="common_module_name">
        <item name="android:textSize">@dimen/common_text_size_module_name</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_module_name</item>
    </style>

    <!-- 通用 Item一级名称 的样式 -->
    <style name="common_item_name">
        <item name="android:textSize">@dimen/common_text_size_item_name</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_item_name</item>
    </style>

    <!-- 通用 Item二级名称 灰色 的样式 -->
    <style name="common_item_info_gray">
        <item name="android:textSize">@dimen/common_fire_unit</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_item_info</item>
    </style>

    <!-- 通用 Item二级名称 绿色 的样式 -->
    <style name="common_item_info_green">
        <item name="android:textSize">@dimen/common_fire_unit</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_dialog_green</item>
    </style>

    <!-- 通用 Item 文件大小 数字 样式 -->
    <style name="common_file_size">
        <item name="android:textSize">@dimen/common_text_size_item_name</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_item_name</item>
    </style>

    <!-- 通用 Item 文件大小 单位 样式 -->
    <style name="common_file_unit">
        <item name="android:textSize">@dimen/common_fire_unit</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_fire_unit</item>
    </style>

    <!-- 通用dialog 超大数字样式 -->
    <style name="common_dialog_large_num">
        <item name="android:textSize">@dimen/common_text_size_xxl</item>
        <item name="android:fontFamily">@string/font_families_roboto_thin</item>
        <item name="android:textColor">@color/common_dialog_green</item>
    </style>

    <!-- 通用dialog 提示文字样式 -->
    <style name="common_dialog_tips">
        <item name="android:textSize">@dimen/common_text_size_l</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_module_name</item>
    </style>

    <!-- 通用dialog 灰色按钮样式 -->
    <style name="common_dialog_button_gray">
        <item name="android:textSize">@dimen/common_text_size_l</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_module_name</item>
    </style>

    <!-- 通用dialog 绿色按钮样式 -->
    <style name="common_dialog_button_green">
        <item name="android:textSize">@dimen/common_text_size_l</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_dialog_green</item>
    </style>

    <!-- 通用dialog 红色按钮样式 -->
    <style name="common_dialog_button_red">
        <item name="android:textSize">@dimen/common_text_size_l</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/common_dialog_btn_red</item>
    </style>

    <!-- 5.0风格圆形进度条 -->
    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean"/>
        <attr name="matProg_barColor" format="color"/>
        <attr name="matProg_rimColor" format="color"/>
        <attr name="matProg_rimWidth" format="dimension"/>
        <attr name="matProg_spinSpeed" format="float"/>
        <attr name="matProg_barSpinCycleTime" format="integer"/>
        <attr name="matProg_circleRadius" format="dimension"/>
        <attr name="matProg_fillRadius" format="boolean"/>
        <attr name="matProg_barWidth" format="dimension"/>
        <attr name="matProg_linearProgress" format="boolean"/>
    </declare-styleable>

    <style name="custom_toast_style">
        <item name="@android:windowEnterAnimation">@anim/custom_toast_appear</item>
        <item name="@android:windowExitAnimation">@anim/custom_toast_disappear</item>
    </style>

    <!-- 自定义弹出框基础样式， 自定义样式的Dialog如需定义theme, 请继承此theme -->
    <style name="base_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 屏幕背景设置是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 出现及消失的动画 -->
        <item name="android:windowAnimationStyle">@style/animation_baseDialog</item>
    </style>

    <!-- Dialog使用的动画样式 -->
    <style name="animation_baseDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/base_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/base_dialog_exit</item>
    </style>

    <!-- Dialog使用的动画样式 -->
    <style name="animation_boot_up_dialog">
        <item name="android:windowEnterAnimation">@anim/boot_up_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/boot_up_dialog_exit</item>
    </style>

    <!-- 主界面菜单的Dialog -->
    <style name="main_menu_dialog_theme" parent="@style/base_dialog_theme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/animation_main_menu_dialog</item>
    </style>
    <!-- 主界面菜单的Dialog使用的动画样式 -->
    <style name="animation_main_menu_dialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/main_menu_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/main_menu_dialog_exit</item>
    </style>

    <!-- Dialog通用 -->

    <style name="dialog_common_title">
        <item name="android:textSize">@dimen/dialog_common_title_size</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/dialog_common_button_title_gray</item>
    </style>

    <style name="dialog_common_version_text">
        <item name="android:textSize">@dimen/dialog_common_version_text_size</item>
        <item name="android:fontFamily">@string/font_families_roboto_light</item>
        <item name="android:textColor">@color/dialog_common_button_green</item>
    </style>

    <style name="dialog_common_versionname">
        <item name="android:textSize">@dimen/dialog_common_versionname_size</item>
        <item name="android:fontFamily">@string/font_families_roboto_thin</item>
        <item name="android:textColor">@color/dialog_common_button_green</item>
    </style>

    <style name="dialog_common_detail">
        <item name="android:textSize">@dimen/dialog_common_detail_size</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/dialog_common_detail_color</item>
    </style>

    <style name="dialog_common_button_light">
        <item name="android:textSize">@dimen/dialog_common_button_text_size</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/dialog_common_button_light</item>
    </style>

    <style name="dialog_rate_button_light">
        <item name="android:textSize">@dimen/dialog_common_button_text_size</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/dialog_rate_button_light</item>
    </style>

    <style name="dialog_common_button_green">
        <item name="android:textSize">@dimen/dialog_common_button_text_size</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/dialog_common_button_green</item>
    </style>

    <style name="dialog_common_button_uninstall">
        <item name="android:textSize">@dimen/dialog_common_button_text_size</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">@color/dialog_common_button_uninstall</item>
    </style>

    <style name="music_group_title">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">#858585</item>
    </style>

    <style name="music_group_size">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="music_item_size_num">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="music_item_size_unit">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
        <item name="android:textColor">#bcbcbc</item>
    </style>

    <style name="music_item_size_filename">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
    </style>

    <style name="music_item_time">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#FF85c443</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
    </style>

    <style name="music_item_author">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#FF9c9c9c</item>
        <item name="android:fontFamily">@string/font_families_roboto</item>
    </style>

    <style name="game_box" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 列表的通用一级分隔线样式 -->
    <style name="common_listview_divider_level0">
        <item name="android:background">@color/common_listview_divider_level0</item>
    </style>
    <!-- 列表的通用的二级分隔线样式 -->
    <style name="common_listview_divider_level1">
        <item name="android:background">@color/common_listview_divider_level1</item>
    </style>

    <declare-styleable name="ripple">
        <attr name="minRadius" format="dimension"/>
        <attr name="paintStrokeWidth" format="dimension"/>
        <attr name="directionOut" format="boolean"/>
        <attr name="fadeOut" format="boolean"/>
        <attr name="circleGap" format="dimension"/>
        <attr name="rippleGap" format="dimension"/>
        <attr name="circleCount" format="integer"/>
        <attr name="repeatCount" format="integer"/>
        <attr name="speed" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="arrow">
        <attr name="paintStrokeWidth2" format="dimension"/>
        <attr name="headWidth" format="dimension"/>
        <attr name="headHeight" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="curtain">
        <attr name="ratio" format="float"/>
        <attr name="frontColor" format="color"/>
        <attr name="backColor" format="color"/>
        <attr name="pivot">
            <enum name="leftTop" value="1"/>
            <enum name="rightTop" value="2"/>
            <enum name="rightBottom" value="4"/>
            <enum name="leftBottom" value="8"/>
        </attr>
        <attr name="direction">
            <enum name="up" value="0"/>
            <enum name="down" value="1"/>
        </attr>
        <attr name="mode">
            <enum name="restart" value="1"/>
            <enum name="reverse" value="-1"/>
        </attr>
        <attr name="dragAway" format="boolean"/>
        <attr name="middleHeight" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="triangle">
        <attr name="vertexPosition" format="dimension">
            <enum name="left" value="0"/>
            <enum name="middle" value="-1"/>
            <enum name="right" value="-2"/>
        </attr>
        <attr name="rotationDegrees" format="integer"/>
        <attr name="color" format="color"/>
    </declare-styleable>

    <!-- app lock -->
    <style name="locker_header_menu_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
    </style>

    <style name="SetGraphicButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/applock_click_bg</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- v2主界面主题 -->
    <style name="Home.Activity.Theme" parent="@style/Common.Activity.Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <!-- 协义确认界面主题 -->
    <style name="PrivacyConfirm.Activity.Theme" parent="@style/Common.Activity.Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 以类似Dialog样式弹出的Activity的主题, 一般这类Activity是在程序之外仿弹窗使用 -->
    <style name="Pop.Activity.Theme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimation_NoAnimation</item>
    </style>

    <!-- 专清的通用模式中的文字Style -->
    <style name="common_deep_clean_size_num">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ed5565</item>
    </style>

    <style name="common_deep_clean_size_unit">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ed5565</item>
    </style>

    <style name="common_deep_clean_item_name">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#89000000</item>
    </style>


</resources>